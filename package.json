{
	"name": "app",
	"version": "1.0.50",
	"scripts": {
		"test": "cross-env NODE_ENV=test bun run db:setup && bun run db:generate && bun test",
		"test:unit": "bun test tests/unit",
		"test:integration": "cross-env NODE_ENV=test bun run db:setup && bun test tests/integration",
		"test:watch": "cross-env NODE_ENV=test bun run db:setup && bun test --watch",
		"dev": "bun run --watch src/presentation/index.ts",
		"build": "bun run build.ts",
		"db:setup": "bun run src/infrastructure/database/setup/index.ts",
		"db:generate": "bun run --bun drizzle-kit generate",
		"db:studio": "bun run --bun drizzle-kit studio",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check": "biome check .",
		"check:fix": "biome check --write ."
	},
	"dependencies": {
		"@elysiajs/openapi": "^1.4.14",
		"drizzle-orm": "^0.45.1",
		"elysia": "^1.4.22",
		"moment": "^2.30.1",
		"pg": "^8.17.2",
		"winston": "^3.19.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@types/pg": "^8.16.0",
		"bun-types": "^1.3.7",
		"cross-env": "^10.1.0",
		"drizzle-kit": "^0.31.8"
	},
	"module": "src/presentation/index.js"
}
